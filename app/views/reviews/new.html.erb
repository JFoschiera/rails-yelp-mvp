<h1>Add Review to restaurant <%= @restaurant.name %></h1>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.button :submit, class: 'btn btn-primary' %> <br>
  <%= link_to 'Back', restaurants_path %>
<% end %>
